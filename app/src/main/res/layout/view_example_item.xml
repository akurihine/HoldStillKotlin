<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"/>

    <LinearLayout
        android:id="@+id/topTitleSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="#FFF"/>

        <TextView
            android:id="@+id/shopInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#FFF"
            android:fontFamily="sans-serif-black"/>
    </LinearLayout>

    <View
        android:id="@+id/underBar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/topTitleSection"
        android:layout_alignLeft="@id/topTitleSection"
        android:layout_alignRight="@id/topTitleSection"
        android:background="#bfff"/>

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_below="@id/underBar"
        android:textSize="40dp"
        android:fontFamily="sans-serif-black"
        android:textColor="#FFF"/>

    <TextView
        android:id="@+id/infoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainText"
        android:padding="20dp"
        android:layout_alignLeft="@id/mainText"
        android:textColor="#FFF"/>
</RelativeLayout>